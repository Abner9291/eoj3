{% extends 'base.jinja2' %}
{% from 'components/profile_card.jinja2' import profile_card with context %}
{% from 'components/blog_preview.jinja2' import blog_preview %}

{% block page_header %}ECNU Online Judge{% endblock %}

{% block content %}

  <div class="ui stackable grid">

    {% if blog_list %}
    <div class="eleven wide column">
      <div class="ui feed">
        {% for blog in blog_list %}
          {{ blog_preview(blog) }}
        {% endfor %}
      </div>
    </div>
    {% else %}
    <div class="eleven wide column">
      <p>News feed is currently unavailable.</p>
    </div>
    {% endif %}

    <div class="five wide column">

      <div class="ui fluid card">
        <div class="content">
          <div class="header">Bulletin</div>
        </div>
        <div class="content">
          <div class="description">{{ bulletin | markdown | safe }}</div>
        </div>
      </div>

      {{ profile_card(request.user, solved) }}
      <form class="ui form" action="{{ url('blog:goto') }}" method="post">
        {% csrf_token %}
        <div class="ui action fluid input">
          <input type="text" name="name" placeholder="Username here...">
          <button type="submit" class="ui button">Go to</button>
        </div>
      </form>

      <div class="ui fluid card">
        <div class="content">
          <div class="header">Recent Actions</div>
        </div>
        <div class="content">
          <div class="ui small feed">
            {% for comment in comment_list %}
            <div class="event">
              <div class="content">
                {% if comment.__class__.__name__ == "Blog" %}
                  {{ username_display(comment.author) }}: <a href="{{ url('blog:detail', comment.pk) }}">{{ comment.title }}</a> <span data-tooltip="Blog" data-inverted=""><i class="icon idea"></i></span> <span class="date">{{ comment.create_time | naturaltime }}</span>
                {% elif comment.__class__.__name__ == "XtdComment" %}
                  {% if comment.content_type.model == "problem" %}
                    {{ username_display(comment.user) }}: {{ comment.comment }} &mdash; <a href="{{ url('problem:discussion', comment.object_pk) }}">Problem #{{ comment.object_pk }}</a> <span data-tooltip="Discussion" data-inverted=""><i class="icon comments"></i></span> <span class="date">{{ comment.submit_date | naturaltime }}</span>
                  {% elif comment.content_type.model == "blog" %}
                    {{ username_display(comment.user) }}: {{ comment.comment }} &mdash; <a href="{{ url('blog:detail', comment.object_pk) }}">Detail</a> <span data-tooltip="Comment in a blog" data-inverted=""><i class="icon reply"></i></span> <span class="date">{{ comment.submit_date | naturaltime }}</span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

    </div>

  </div>

{% endblock %}
