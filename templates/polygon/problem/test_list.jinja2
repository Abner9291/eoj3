{% extends 'polygon/problem/base.jinja2' %}

{% block problem_content %}

  {% include 'components/message.jinja2' %}

  <table class="ui celled center aligned table">
    <thead class="full-width">
      <tr>
        <th colspan="11">
          <a href="{{ url('polygon:repo_test_create', problem.pk) }}" data-tooltip="Add test(s)" class="ui small primary icon labeled button">
            <i class="add icon"></i> Add
          </a>
          <a class="ui small teal icon labeled button" data-tooltip="Generate input and output">
            <i class="refresh icon"></i> Refresh
          </a>
          <a class="ui small red icon labeled button" data-tooltip="Upload to judge server">
            <i class="upload icon"></i> Confirm
          </a>
        </th>
      </tr>
      <tr>
        <th>#</th>
        <th>Input</th>
        <th>Output</th>
        <th>Size</th>
        <th>Description</th>
        <th>Comment</th>
        <th>Group</th>
        <th>Modified</th>
        <th colspan="2">Actions</th>
        <th>Sel</th>
      </tr>
    </thead>
    <tbody>
    {% for test in test_list %}
      <tr>
        <td>{{ test.case_number }}</td>
        <td><pre><code>{{ test.input_preview }}</code></pre></td>
        <td><pre><code>{{ test.output_preview }}</code></pre></td>
        <td>{{ (test.size / 1024) | round(2) }} KB</td>
        <td>{{ test.description }}</td>
        <td>{% if test.show_in_samples %}Sample. {% endif %}
          {% if test.show_in_pretests %}Pretest. {% endif %}
          {% if not test.show_in_tests %}NOT a final test. {% endif %}
          {% if test.manual_output_lock %}Output locked. {% endif %}
        </td>
        <td>{{ test.group }}</td>
        <td>{{ test.modified | date('Y-m-d h:i:s') }}</td>
        <td><a href="#">Move</a></td>
        <td><a href="#">Delete</a></td>
        <td><input type="checkbox"></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}